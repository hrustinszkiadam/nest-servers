generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"  
}

datasource db {
  provider = "mysql"
}

model Server {
  id          Int    @id @default(autoincrement())
  ip_address  String
  mac_address String @unique
  memory_gb   Int
  storage_gb  Int
  nickname    String? @unique
}
